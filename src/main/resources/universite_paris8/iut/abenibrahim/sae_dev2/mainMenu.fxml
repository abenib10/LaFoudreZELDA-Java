<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.media.MediaView?>
<StackPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="universite_paris8.iut.abenibrahim.sae_dev2.controleur.ControleurMenu">
    <ImageView>
        <Image url="@background.jpg"/> <!-- Remplacez 'background.jpg' par le chemin de votre image de fond -->
    </ImageView>
    <MediaView fx:id="mediaView" fitWidth="1500" fitHeight="1500" />
    <VBox fx:id="vbox" alignment="CENTER" spacing="20.0" style="-fx-background-color: rgba(0, 0, 0, 0.5);">
        <Text  text="LA FOUDRE" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-fill: #ff0000; -fx-effect: dropshadow(gaussian, rgba(255, 255, 255, 0.5), 10, 0.5, 0, 0);"/>
        <Button fx:id="playButton" text="Nouvelle Partie" onAction="#handlePlayButtonAction" style="-fx-background-color: #800000; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 5, 0.5, 0, 0);"/>
        <Button fx:id="continuerButton" text="Continuer" onAction="#handlecontinuerButtonAction" style="-fx-background-color: #800000; -fx-text-fill: white; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 5, 0.5, 0, 0);"/>
    </VBox>
</StackPane>